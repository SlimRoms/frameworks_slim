<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Hardware "softkeys" present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
            1 - Home
            2 - Back
            4 - Menu
            8 - Assistant (search)
           16 - App switch
           32 - Camera
        For example, a device with Home, Back and Menu keys would set this
        config to 7. -->
    <integer name="config_deviceHardwareKeys">0</integer>

    <string name="config_externalSystemServer">org.slim.service.SlimSystemServer</string>

    <string-array name="config_externalSlimServices">
        <item>org.slim.service.SlimActionsService</item>
    </string-array>

    <!-- The duration (in milliseconds) of recent app screen animation. -->
    <integer name="config_recentDefaultDur">300</integer>

    <!-- The duration (in milliseconds) of recent app screen exit animation. -->
    <integer name="config_recentExitDur">450</integer>

    <!-- Disable speaker proximity preference for problematic devices -->
    <bool name="config_enabled_speakerprox" translatable="false">true</bool>

    <!-- Slim Recents default allowed max apps -->
    <integer name="slim_recents_max_apps_default">25</integer>

    <integer name="config_buttonBrightnessSettingDefault">255</integer>
    <integer name="config_keyboardBrightnessSettingDefault">0</integer>
    <bool name="config_deviceHasVariableButtonBrightness">false</bool>

    <!-- The list of vendor package signatures that should also be considered
         platform signatures, specifically for use on devices with a vendor partition. -->
    <string-array name="config_vendorPlatformSignatures">
    </string-array>
</resources>
