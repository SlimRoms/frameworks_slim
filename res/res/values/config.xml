<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Hardware "softkeys" present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
            1 - Home
            2 - Back
            4 - Menu
            8 - Assistant (search)
           16 - App switch
           32 - Camera
        For example, a device with Home, Back and Menu keys would set this
        config to 7. -->
    <integer name="config_deviceHardwareKeys">0</integer>

    <string name="config_externalSystemServer">org.slim.service.SlimSystemServer</string>

    <string-array name="config_externalSlimServices">
        <item>org.slim.service.SlimActionsService</item>
        <item>org.slim.service.SlimLightsService</item>
    </string-array>

    <!-- The duration (in milliseconds) of recent app screen animation. -->
    <integer name="config_recentDefaultDur">300</integer>

    <!-- The duration (in milliseconds) of recent app screen exit animation. -->
    <integer name="config_recentExitDur">450</integer>

    <!-- Disable speaker proximity preference for problematic devices -->
    <bool name="config_enabled_speakerprox" translatable="false">true</bool>

    <!-- Slim Recents default allowed max apps -->
    <integer name="slim_recents_max_apps_default">25</integer>

    <!-- Do not translate. Defines the mapping of notification package names
         from the actual triggering package to the user selectable package.
         E.g. GTalk notifications come via Google Services Framework
         Format: [triggering package]|[user package] -->
    <string-array name="notification_light_package_mapping" translatable="false">
        <item>com.google.android.gsf|com.google.android.talk</item>
    </string-array>

    <!-- Is the notification LED intrusive? Used to decide if there should be a disable option -->
    <bool name="config_intrusiveNotificationLed">false</bool>

    <!-- Does the notification LED support multiple colors -->
    <bool name="config_multiColorNotificationLed">false</bool>

    <!-- Is the battery LED intrusive? -->
    <bool name="config_intrusiveBatteryLed">false</bool>

    <!-- Does the battery LED support multiple colors? -->
    <bool name="config_multiColorBatteryLed">false</bool>

    <integer name="config_notificationsBatteryMediumFastARGB">0xFF0000FF</integer>

    <integer name="config_chargingFastThreshold">1500000</integer>

    <!-- Do the battery/notification LEDs support pulsing?
         Used to decide if we show pulse settings -->
    <bool name="config_ledCanPulse">true</bool>

    <!-- Vibrator pattern for notifications while alerts
         are disabled -->
    <integer-array name="config_notificationNoAlertsVibePattern">
        <item>0</item>
        <item>50</item>
        <item>100</item>
        <item>50</item>
    </integer-array>
</resources>
