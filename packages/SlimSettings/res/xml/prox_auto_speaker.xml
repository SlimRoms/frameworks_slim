<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        xmlns:slim="http://schemas.android.com/apk/res/org.slim.framework"
            android:key="prox_auto_speaker_options"
            android:title="@org.slim.framework:string/display_category_prox_auto_speaker_title" >

        <org.slim.preference.SlimSwitchPreference
            android:key="prox_auto_speaker"
            android:title="@org.slim.framework:string/prox_auto_speaker_title"
            android:summary="@org.slim.framework:string/prox_auto_speaker_summary"
            android:defaultValue="false" />

        <org.slim.preference.SlimSeekBarPreference
            android:key="prox_auto_speaker_delay"
            android:title="@org.slim.framework:string/prox_auto_speaker_delay_title"
            android:summary="@org.slim.framework:string/prox_auto_speaker_delay_summary"
            android:dependency="prox_auto_speaker"
            slim:defaultValue="100"
            slim:useMilliSeconds="true"
            slim:interval="1"
            slim:minValue="100"
            slim:multiplyValue="100" />

        <org.slim.preference.SlimSwitchPreference
            android:key="prox_auto_speaker_incall_only"
            android:title="@org.slim.framework:string/prox_auto_speaker_incall_only_title"
            android:summaryOff="@org.slim.framework:string/prox_auto_speaker_incall_only_summary_off"
            android:summaryOn="@org.slim.framework:string/prox_auto_speaker_incall_only_summary_on"
            android:defaultValue="false"
            android:dependency="prox_auto_speaker" />

</PreferenceScreen>
