 <slim-settings
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slim="http://schemas.android.com/apk/res/slim">

    <setting
        android:key="battery_light_settings"
        android:title="@string/battery_light_title"
        android:fragment="com.slim.settings.notificationlight.BatteryLightSettings"
        slim:preferenceXml="@xml/battery_light_settings" />

    <setting
        android:key="notification_light_settings"
        android:title="@string/notification_light_title"
        android:fragment="com.slim.settings.notificationlight.NotificationLightSettings"
        slim:preferenceXml="@xml/notification_light_settings" />

    <setting
        android:key="slim_interface_settings"
        android:title="@string/interface_settings_title"
        android:fragment="com.slim.settings.fragments.SlimPreferenceFragment"
        slim:preferenceXml="@xml/slim_interface_settings" />

    <setting
        android:key="slim_navigation_settings"
        android:title="@string/navigation_settings_title"
        android:fragment="com.slim.settings.fragments.SlimPreferenceFragment"
        slim:preferenceXml="@xml/slim_navigation_settings" />

    <setting
        android:key="advanced_doze_settings"
        android:title="@string/doze_settings_title"
        android:fragment="com.slim.settings.fragments.DozeSettingsFragment"
        slim:preferenceXml="@xml/doze_settings" />

    <setting
        android:key="prox_auto_speaker"
        android:title="@slim:string/prox_auto_speaker_title"
        android:fragment="com.slim.settings.fragments.SlimPreferenceFragment"
        slim:preferenceXml="@xml/prox_auto_speaker" />

</slim-settings>
